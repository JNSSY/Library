<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleImageView">
        <attr name="num" format="string" />
        <attr name="num_color" format="color"/>
        <attr name="bg_circle" format="color" />
    </declare-styleable>


    <declare-styleable name="TvProgressBar">
        <!-- 背景图片 -->
        <attr name="background" format="reference" />
        <!-- 已走过的进度图片 -->
        <attr name="progress" format="reference" />
        <!-- 滑块图片 -->
        <attr name="thumb" format="reference" />
        <!-- 滑块宽度 -->
        <attr name="thumbWidth" format="reference|dimension" />
        <!-- 进度条宽度 -->
        <attr name="progressWidth" format="reference|dimension" />
        <!-- 进度条方向       0：水平      1：竖直 -->
        <attr name="orientation" format="reference|integer" />
    </declare-styleable>


    <!--验证码-->
    <declare-styleable name="queryCode">
        <attr name="text" format="string"/>
        <attr name="textSize" format="dimension"/>
        <attr name="textColor" format="color"/>
    </declare-styleable>


</resources>